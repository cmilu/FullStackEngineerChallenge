{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "moduleResolution": "node",
    "target": "es5",
    "module": "ESNext",
    "jsx": "react",
    "lib": ["es5", "es2015", "es2016", "es2017", "dom"],
    "removeComments": true,
    "strict": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "noImplicitReturns": true,
    "rootDir": "src",
    "baseUrl": "src",
    "paths": {
      "~/*": ["./*"]
    },
    "esModuleInterop": true
  },
  "include": ["src", "./typings.d.ts"],
  "exclude": ["node_modules", "dist"]
}
